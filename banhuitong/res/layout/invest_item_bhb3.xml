<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/linearlayout"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="52dp">

             <TextView
                 android:id="@+id/tv_type"
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_marginTop="10dp"
                 android:gravity="center"
                 android:text=""
                 android:textColor="#FFFFFF"
                 android:textSize="20sp" />
         </LinearLayout>
        
         <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

         <TextView
             android:id="@+id/tv_item_no"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="7dp"
             android:text=""
             android:textColor="@color/blue"
             android:textSize="15sp"
             android:textStyle="bold" />
         
          <TextView
              android:id="@+id/tv_item_show_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textColor="@color/black"
              android:textSize="15sp"
              android:textStyle="bold" />

    </LinearLayout>
    
     <LinearLayout
         android:id="@+id/ll_invest_type"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginRight="20dp"
         android:gravity="right"
         android:orientation="vertical">

            <TextView
                android:id="@+id/tv_invest_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text=""
                android:textAlignment="gravity"
                android:textColor="@color/dark_red"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_invest_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                		android:text="资金类型"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal" 
        android:paddingTop="3dp"
        android:paddingLeft="40dp"
        android:paddingRight="20dp">
        <View android:layout_height="5px" android:background="#CCCCCC" android:layout_width="fill_parent"></View> 
	</LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
          
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:orientation="vertical" 
            android:layout_marginLeft="40dp">

                <TextView
                    android:id="@+id/tv_money_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/dark_red"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_money_rate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实际收益率"
                    android:textAlignment="gravity"
                    android:textColor="#000000"
                    android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_holddays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="持有天数"
                    android:textColor="#000000"
                    android:textSize="15sp" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_real_bonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/dark_red"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实际收益"
                    android:textColor="#000000"
                    android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal" 
        android:paddingTop="3dp"
        android:paddingLeft="40dp"
        android:paddingRight="20dp">
        <View android:layout_height="2px" android:background="#CCCCCC" android:layout_width="fill_parent"></View> 
	</LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/dark_green"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date2name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解持日"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>
        
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_status"
                android:layout_width="90dp"
                android:layout_height="26dp"
                android:visibility="gone"
                android:background="@drawable/round_corner_dark_red"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
    </LinearLayout>
	
</LinearLayout>