<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#DCDCDC"
    android:orientation="vertical" >

    <!-- 顶部 -->
     <com.banhuitong.view.TopBarView 
          android:id="@+id/topbar" 
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content" />   
    
    <!-- 中间 -->
 	<ScrollView
 	    android:id="@+id/scroll_view"
 	    android:layout_below="@+id/topbar"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content" >
	    
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
            android:orientation="vertical" >
         
         <RelativeLayout
             android:id="@+id/layer1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/border"
             android:gravity="center_vertical"
             android:minHeight="60dp" >

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:text="登录账号"
                 android:textColor="#000000"
                 android:textSize="18sp" />
             
             <TextView
                 android:id="@+id/tv_username"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="10dp"
                 android:text="--"
                 android:textColor="#B22222"
                 android:textSize="18sp" />

         </RelativeLayout> 
         
         <RelativeLayout
             android:id="@+id/layer2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/layer1"
             android:background="@drawable/border"
             android:gravity="center_vertical"
             android:minHeight="60dp" >

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:text="真实姓名"
                 android:textColor="#000000"
                 android:textSize="18sp" />
             
             <TextView
                 android:id="@+id/tv_realname"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="10dp"
                 android:text="--"
                 android:textColor="#B22222"
                 android:textSize="18sp"/>

         </RelativeLayout> 
         
         <RelativeLayout
             android:id="@+id/layer3"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/layer2"
             android:background="@drawable/border"
             android:gravity="center_vertical"
             android:minHeight="60dp" >

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:text="身份证号"
                 android:textColor="#000000"
                 android:textSize="18sp" />
             
             <TextView
                 android:id="@+id/tv_idcard"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="10dp"
                 android:text="--"
                 android:textColor="#B22222"
                 android:textSize="18sp"/>

         </RelativeLayout> 
         
         <RelativeLayout
             android:id="@+id/layer4"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/layer3"
             android:background="@drawable/border"
             android:gravity="center_vertical"
             android:minHeight="60dp" >

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:text="绑定手机"
                 android:textColor="#000000"
                 android:textSize="18sp" />
             
             <TextView
                 android:id="@+id/tv_mobile"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="10dp"
                 android:text="--"
                 android:textColor="#B22222"
                 android:textSize="18sp"/>

         </RelativeLayout> 
	     
             <LinearLayout
                 android:id="@+id/layer5"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/layer4"
                 android:layout_marginTop="10dp"
                 android:gravity="center"
                 android:orientation="horizontal" >

                 <TextView
                     android:id="@+id/tv_logout"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/red_round"
                     android:gravity="center"
                     android:minWidth="300dp"
                     android:text="退出登录"
                     android:textColor="#FFFAFA"
                     android:textSize="20sp" />

             </LinearLayout>

	</RelativeLayout>
	</ScrollView>
	
</RelativeLayout>