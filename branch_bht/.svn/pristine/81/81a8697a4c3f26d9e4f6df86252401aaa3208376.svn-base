<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"  
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#DCDCDC"
    android:orientation="vertical" >
    
    <!-- 中间 -->
    <LinearLayout
        android:id="@+id/middle_tab" 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp">

        <RadioGroup
            android:id="@+id/tabs_rg_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/tab_rb_ent"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/main_tab"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="借款项目"
                android:textColor="#FF0033" />

            <RadioButton
                android:id="@+id/tab_rb_bhb"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/main_tab"
                android:button="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="班汇宝"
                android:textColor="#FF0033" />

            <RadioButton
                android:id="@+id/tab_rb_credit_assign"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/main_tab"
                android:button="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="二级市场"
                android:textColor="#FF0033" />
        </RadioGroup>
    </LinearLayout>

    <com.banhuitong.view.MyListView
        android:id="@+id/lv_ent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#DCDCDC"
        android:dividerHeight="10dp"
        android:background="#DCDCDC"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" 
        android:layout_below="@+id/middle_tab" />
	
</RelativeLayout>