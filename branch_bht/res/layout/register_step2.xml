<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#DCDCDC"
    android:orientation="vertical" >

    <!-- 顶部 -->
	<com.banhuitong.view.TopBarView 
          android:id="@+id/topbar" 
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content" />  
    
    <!-- 中间 -->
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@+id/topbar"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_realname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入真实姓名" >
         </EditText>
         
        <EditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入身份证号"
            android:visibility="gone" >

         </EditText>
         
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入长度为4-15字符用户名" >
         </EditText>
         
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入长度为6-18字符密码" >
         </EditText>
         
        <EditText
            android:id="@+id/et_repassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请确认密码" >
         </EditText>
         
        <EditText
            android:id="@+id/et_recommender_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="推荐人手机号或推荐码（非必填）" >
         </EditText>
         
        <EditText
            android:id="@+id/dt_org_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:ems="10"
            android:hint="企业编号（非必填）" >
         </EditText>
         
        <TextView
             android:id="@+id/tv_reg_submit"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:padding="5dp"
             android:text="完成注册"
             android:textColor="#FFFAFA"
             android:background="@drawable/red_round"
             android:textSize="20sp" />
	</LinearLayout>
</RelativeLayout>